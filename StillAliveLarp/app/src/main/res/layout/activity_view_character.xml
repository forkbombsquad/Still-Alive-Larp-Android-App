<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray"
    tools:context=".ViewCharacterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/viewchar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Character Name\nActive/Planned/NPC"
                android:textStyle="bold"
                android:textSize="32sp"
                android:textAlignment="center"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"/>

            <com.forkbombsquad.stillalivelarp.utils.KeyValueView
                android:id="@+id/viewchar_playerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:key="Player"
                app:showDiv="true"/>

            <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlack
                android:id="@+id/charview_viewStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                app:text="View Stats"
                app:showLoading="false"/>

            <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlack
                android:id="@+id/charview_viewSkillsTree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                app:text="View Skills (Tree)"
                app:showLoading="false"/>

            <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlack
                android:id="@+id/charview_viewSkillsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                app:text="View Skills (List)"
                app:showLoading="false"/>

            <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlack
                android:id="@+id/charview_viewBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                app:text="View Bio"
                app:showLoading="false"/>

            <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlack
                android:id="@+id/charview_viewGear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                app:text="View Gear"
                app:showLoading="false"/>

            <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlack
                android:id="@+id/charview_viewXpReductions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                app:text="View Xp Reductions"
                app:showLoading="false"/>

            <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlack
                android:id="@+id/charview_viewAwards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                app:text="View Awards"
                app:showLoading="false"/>

        </LinearLayout> <!-- BEFORE THIS ONE-->

    </ScrollView>

</LinearLayout>