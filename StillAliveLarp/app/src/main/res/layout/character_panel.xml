<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/charpanel_activeCharTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Character Name Even If It's Long (Active Character)"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textAlignment="textStart"/>

    <LinearLayout
        android:id="@+id/charpanel_activeCharContentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlack
            android:id="@+id/charpanel_viewStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            app:text="View Character Stats"
            app:showLoading="false"/>

        <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlack
            android:id="@+id/charpanel_viewSkillsTree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            app:text="View Skills (Tree)"
            app:showLoading="false"/>

        <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlack
            android:id="@+id/charpanel_viewSkillsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            app:text="View Skills (List)"
            app:showLoading="false"/>

        <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlack
            android:id="@+id/charpanel_viewBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            app:text="View Bio"
            app:showLoading="false"/>

        <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlack
            android:id="@+id/charpanel_viewGear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            app:text="View Gear"
            app:showLoading="false"/>

        <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlack
            android:id="@+id/charpanel_viewXpReductions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            app:text="View Xp Reductions"
            app:showLoading="false"/>

        <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlack
            android:id="@+id/charpanel_viewAwards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            app:text="View Character Awards"
            app:showLoading="false"/>

    </LinearLayout>

    <TextView
        android:id="@+id/charpanel_otherCharacters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other Characters"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:paddingTop="16dp"
        android:textAlignment="textStart"/>

    <LinearLayout
        android:id="@+id/charpanel_otherCharsContentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlack
            android:id="@+id/charpanel_viewInactiveCharacters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            app:text="View Inactive Characters"
            app:showLoading="false"/>

        <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlue
            android:id="@+id/charpanel_viewPlannedCharacters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            app:text="View Planned Characters"
            app:showLoading="false"/>

    </LinearLayout>

</LinearLayout>