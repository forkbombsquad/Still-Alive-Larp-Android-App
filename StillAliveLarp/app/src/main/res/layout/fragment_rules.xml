<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/light_gray"
    tools:context=".views.rules.RulesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/rules_rulesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Rules and Reference"
                android:textStyle="bold"
                android:textSize="32sp"
                android:textAlignment="center"/>

            <com.forkbombsquad.stillalivelarp.utils.LoadingLayout
                android:id="@+id/loadinglayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlack
                android:id="@+id/rules_skillListNav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                app:text="Skill List"
                app:showLoading="false"/>

            <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlack
                android:id="@+id/rules_skillTreeDiagramNativeNav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                app:text="Skill Tree Diagram"
                app:showLoading="false"/>

            <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlack
                android:id="@+id/rules_coreRulebookNav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                app:text="Core Rulebook"
                app:showLoading="false"/>

            <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlack
                android:id="@+id/rules_treatingWoundsFlowchartNav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                app:text="Treating Wounds Flowchart"
                app:showLoading="false"/>


        </LinearLayout> <!-- BEFORE THIS ONE-->

    </ScrollView>

</LinearLayout>