<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:background="@color/light_gray"
tools:context=".views.account.ManageAccountActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Manage Account"
            android:textStyle="bold"
            android:textSize="32sp"
            android:textAlignment="center"/>

        <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlack
            android:id="@+id/manageaccount_changePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:text="Change Password"
            app:showLoading="false"/>


        <com.forkbombsquad.stillalivelarp.utils.LoadingButton
            android:id="@+id/manageaccount_deleteLocalData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            app:buttontext="Delete Local data"
            />

        <com.forkbombsquad.stillalivelarp.utils.LoadingButton
            android:id="@+id/manageaccount_deleteAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:buttontext="Delete Account"
            />

    </LinearLayout> <!-- BEFORE THIS ONE-->

</ScrollView>

</LinearLayout>