<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:background="@color/light_gray"
tools:context=".OfflineMyAccountActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="My Account (Offline)"
            android:textStyle="bold"
            android:textSize="32sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/myaccountoffline_playerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="24sp" />

        <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlack
            android:id="@+id/myaccountoffline_playerStatsNavArrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            app:text="Player Stats"
            app:showLoading="false"/>

        <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlack
            android:id="@+id/myaccountoffline_characterStatsNavArrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            app:text="Character Stats"
            app:showLoading="false"/>

        <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlack
            android:id="@+id/myaccountoffline_viewSkillsNavArrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            app:text="View Skills"
            app:showLoading="false"/>

        <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlack
            android:id="@+id/myaccountoffline_bioNavArrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            app:text="See Bio"
            app:showLoading="false"/>

        <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlack
            android:id="@+id/myaccountoffline_gearNavArrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            app:text="See Gear"
            app:showLoading="false"/>

        <com.forkbombsquad.stillalivelarp.utils.NavArrowButtonBlack
            android:id="@+id/myaccountoffline_rulesNavArrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            app:text="View Rules"
            app:showLoading="false"/>

    </LinearLayout> <!-- BEFORE THIS ONE-->

</ScrollView>

</LinearLayout>